@model gym.ViewModels.LoginViewModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Đăng nhập";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/login.css"/>
</head>

<body>
    <div class="header">
        <a href="/trang-chu">
            Trang chủ
        </a>
    </div>
    <div class="main_div">
        <div class="title">Đăng nhập</div>
        <div class="social_icons">
            <a href="#"><i class="fab fa-facebook-f"></i> <span>Facebook</span></a>
            <a href="#"><i class="fab fa-google"></i><span>Google</span></a>
        </div>
        <form asp-action="Login" method="post">
            <div class="input_box">
                <input type="text" asp-for="Username" placeholder="Email hoặc Tên tài khoản" value="@ViewData["UserName"]" required />
                <div class="icon"><i class="fas fa-user"></i></div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="input_box">
                <input type="password" asp-for="Password" placeholder="Mật khẩu" required />
                <div class="icon"><i class="fas fa-lock"></i></div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="option_div">
                <div class="check_box">
                    <input type="checkbox" asp-for="RememberMe" id="check" />
                    <label for="check">Lưu tài khoản</label>
                </div>
                <div class="forget_div">
                    <a href="/quen-mat-khau">Quên mật khẩu?</a>
                </div>
            </div>

            <div class="input_box button">
                <input type="submit" value="Đăng nhập" />
            </div>

            <div class="sign_up">
                Tạo tài khoản? <a href="/dang-ky">Đăng kí ngay</a>
            </div>
        </form>
    </div>
</body>

<style>
    .text-danger {
    color: red;
    font-size: 12px;
    font-weight: bold;
    }
</style>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>