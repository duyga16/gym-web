@model gym.ViewModels.ChangePasswordViewModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="header">
        <a href="/trang-chu">
            Trang chủ
        </a>
    </div>
    <div class="main_div">
        <div class="title">Đổi mật khẩu</div>
        <form asp-action="ChangePassword" method="post">
            <div class="input_box">
                <input type="password" asp-for="PasswordOld" placeholder="Nhập mật khẩu cũ" required />
                <div class="icon"><i class="fas fa-lock"></i></div>
                <span asp-validation-for="PasswordOld" class="text-danger"></span>
            </div>
            <div class="input_box">
                <input type="password" asp-for="Password" placeholder="Nhập mật khẩu mới" required />
                <div class="icon"><i class="fas fa-lock"></i></div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="input_box">
                <input type="password" asp-for="ConfirmPassword" placeholder="Xác nhận mật khẩu mới" required />
                <div class="icon"><i class="fas fa-lock"></i></div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="input_box button">
                <input type="submit" value="Đổi mật khẩu" />
            </div>

            <div class="sign_up">
                Quay lại trang tài khoản? <a href="/tai-khoan">Xác nhận</a>
            </div>
        </form>
    </div>
</body>
<style>
    .text-danger {
        color: red;
        font-size: 12px;
        font-weight: bold;
    }
</style>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>