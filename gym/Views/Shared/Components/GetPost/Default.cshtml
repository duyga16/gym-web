@model IEnumerable<gym.Models.News>
@{
    @if (Model.Any())
    {
        <!-- Hiển thị các bài viết tiếp theo -->
        @foreach (var post in Model)
        {
            <div class="latest-large set-bg" data-setbg="@Url.Content("~/img/latestNews/" + post.Img)">
                <div class="ll-text">
                    <h5><a href="@Url.Action("Details", "Blogs", new { meta = "tin-tuc", subMeta = post.subMeta })">@post.Title</a></h5>
                    <ul>
                        <li>@post.Datebegin</li>
                    </ul>
                </div>
            </div>
        }
    }
}
