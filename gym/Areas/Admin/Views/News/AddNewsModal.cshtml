@{
    <div class="modal fade" id="addRowModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title">
                        <span class="fw-mediumbold"> Thêm mới</span>
                        <span class="fw-light"> tin tức - sự kiện </span>
                    </h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/Admin/News/AddNews" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group form-group">
                                    <label>Tên tin tức - sự kiện</label>
                                    <input id="addName" name="NewsName" type="text" class="form-control" placeholder="Nhập tên" required>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group form-group">
                                    <label>Mô tả ngắn</label>
                                    <input id="addScript" name="Script" type="text" class="form-control" placeholder="Nhập mô tả" required>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group form-group">
                                    <label>Chọn hình ảnh</label>
                                    <input id="addImage" name="Image" type="file" class="form-control" accept="image/*" required>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group form-group">
                                    <label>Tiêu đề</label>
                                    <input id="addTitle" name="Title" type="text" class="form-control" placeholder="Nhập tiêu đề" required>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="comment">Mô tả</label>
                                    <textarea id="addDescriptions" name="Descriptions" class="form-control" rows="4" placeholder="Nhập mô tả"></textarea>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="comment">Nội dung chi tiết</label>
                                    <textarea id="addDetail" name="Detail" class="form-control" rows="10" placeholder="Nhập nội dung"></textarea>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group form-group">
                                    <label>Slogan</label>
                                    <input id="addSlogan" name="Slogan" type="text" class="form-control" placeholder="Nhập Slogan" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-group">
                                    <label>SubMeta</label>
                                    <input id="addSubMeta" name="SubMeta" type="text" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-group">
                                    <label>Chọn mục hiển thị</label>
                                    <select id="addMeta" name="Meta" class="form-control">
                                        <option value="gioi-thieu">Giới thiệu</option>
                                        <option value="dich-vu">Dịch vụ</option>
                                        <option value="tin-tuc">Tin tức</option>
                                        <option value="su-kien">Sự kiện</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-group">
                                    <label>Hiển thị</label>
                                    <select id="addHide" name="Hide" class="form-control">
                                        <option value="1">Có</option>
                                        <option value="0">Không</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-group">
                                    <label>Thứ tự</label>
                                    <input id="addOrder" name="Order" type="number" class="form-control" placeholder="Nhập thứ tự">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer border-0">
                            <button type="submit" class="btn btn-primary">
                                Thêm
                            </button>
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                                Đóng
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
